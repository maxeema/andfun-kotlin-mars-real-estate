<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listingFragment">

    <fragment
        android:id="@+id/listingFragment"
        android:name="maxeem.america.mars.ListingFragment"
        tools:layout="@layout/fragment_listing">
        <action
            android:id="@+id/showDetails"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="maxeem.america.mars.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="property"
            app:argType="maxeem.america.mars.api.MarsProperty" />
    </fragment>

</navigation>
