<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSurface">?colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="PrimaryOnSurface">
        <item name="colorOnSurface">?colorPrimary</item>
    </style>
    <style name="SecondaryAsPrimary">
        <item name="colorPrimary">?colorSecondary</item>
    </style>

    <style name="AccentElevationOverlay">  <item name="elevationOverlayColor">?colorAccent</item> </style>
    <style name="PrimaryElevationOverlay"> <item name="elevationOverlayColor">?colorPrimary</item> </style>

</resources>
